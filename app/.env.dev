# ============================================
# Docling Development Environment Variables
# For local testing without SSL
# ============================================

# ===========================================
# API Configuration
# ===========================================

# API authentication token (simple for dev)
DOCLING_API_TOKEN=dev-token-123

# Environment
ENV=development

# API host and port
HOST=0.0.0.0
PORT=8000

# Number of API workers (single for dev)
WORKERS=1

# CORS allowed origins (localhost for dev)
CORS_ORIGINS=http://localhost:8080,http://localhost:3000,http://127.0.0.1:8080

# ===========================================
# Redis Configuration
# ===========================================

REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# ===========================================
# Celery Worker Configuration
# ===========================================

# Lower concurrency for dev
CELERY_CONCURRENCY=1

# Task queue name
CELERY_QUEUE=docling

# Debug log level for development
CELERY_LOGLEVEL=debug

# Skip preloading models for faster startup
PRELOAD_MODELS=false

# ===========================================
# Embedding Model Configuration
# ===========================================

EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# ===========================================
# Flower Monitoring (always on in dev)
# ===========================================

FLOWER_USER=admin
FLOWER_PASSWORD=admin
FLOWER_PORT=5555
