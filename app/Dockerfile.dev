# ============================================
# Docling Development Dockerfile
# Optimized for local development with hot reload
# ============================================

FROM python:3.12-slim

# Labels
LABEL maintainer="Docling Development Setup"
LABEL description="Development Docling document processing service"
LABEL version="1.0.0-dev"

# Set environment variables
ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    PYTHONFAULTHANDLER=1 \
    PIP_NO_CACHE_DIR=1 \
    PIP_DISABLE_PIP_VERSION_CHECK=1 \
    APP_HOME=/app

# Install system dependencies
RUN apt-get update && apt-get install -y --no-install-recommends \
    build-essential \
    gcc \
    g++ \
    libffi-dev \
    libmagic1 \
    libgl1 \
    libglib2.0-0 \
    libsm6 \
    libxext6 \
    libxrender-dev \
    libgomp1 \
    poppler-utils \
    tesseract-ocr \
    tesseract-ocr-eng \
    curl \
    git \
    vim \
    && rm -rf /var/lib/apt/lists/* \
    && apt-get clean

# Create non-root user
RUN groupadd --gid 1000 docling && \
    useradd --uid 1000 --gid docling --shell /bin/bash --create-home docling

# Set work directory
WORKDIR $APP_HOME

# Copy requirements first for better caching
COPY requirements.txt .

# Install Python dependencies
RUN pip install --upgrade pip wheel setuptools && \
    pip install -r requirements.txt && \
    pip install watchfiles ipython ipdb

# Create directories for temp files, downloads, and model cache
RUN mkdir -p /tmp/docling_downloads /tmp/docling_uploads /root/.cache /root/.easyocr

# Copy application code
COPY . .

# Make entrypoint executable
RUN chmod +x entrypoint.sh

# NOTE: Running as root for dev to avoid volume permission issues
# Production Dockerfile uses non-root user

# Health check (less strict for development)
HEALTHCHECK --interval=60s --timeout=30s --start-period=120s --retries=5 \
    CMD curl -f http://localhost:8000/health/live || exit 1

# Expose port
EXPOSE 8000

# Set entrypoint
ENTRYPOINT ["./entrypoint.sh"]

# Default command (can be overridden)
CMD ["api"]
